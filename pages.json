{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/more/more",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/search/search",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/history/history",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/detail/detail",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/detail/detail2",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": false
			}

		}
	],
	"tabBar": {
		"color": "#888888",
		"selectedColor": "#222",
		"borderStyle": "white",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "/static/images/home.png",
				"selectedIconPath": "static/images/home-active.png",
				"text": "首页"
			}, {
				"pagePath": "pages/search/search",
				"iconPath": "static/images/search.png",
				"selectedIconPath": "static/images/search-active.png",
				"text": "搜索"
			},
			{
				"pagePath": "pages/history/history",
				"iconPath": "static/images/video.png",
				"selectedIconPath": "static/images/video-active.png",
				"text": "浏览记录"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "超前点播追剧神器",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF"
	}
}
